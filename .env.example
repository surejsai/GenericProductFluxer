# Fluxer Atelier Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required)
# =============================================================================

# SERP API Key - for product search
# Get your key at: https://serpapi.com/
SERP_API_KEY=your_serp_api_key_here

# Firecrawl API Key - for LLM-powered product extraction (recommended)
# Get your key at: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ScraperAPI Key - alternative for HTML extraction
# Get your key at: https://www.scraperapi.com/
SCRAPER_API_KEY=your_scraper_api_key_here

# OpenAI API Key - for SEO description generation
# Get your key at: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Extractor Configuration
# =============================================================================

# Which extractor to use: "firecrawl" (recommended) or "html"
EXTRACTOR_TYPE=firecrawl

# Number of parallel workers for batch extraction
# Reduce for memory-constrained environments (e.g., Render free tier)
EXTRACTION_WORKERS=2

# =============================================================================
# Flask Server Settings
# =============================================================================

# Environment: "development" or "production"
FLASK_ENV=development

# Enable debug mode (set to "false" in production)
FLASK_DEBUG=true

# Server host and port
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
